@model NZWalks.UI.Models.DTOs.RegionDto
<h1>Edit Region</h1>

@if (Model is not null)
{
    <form method="post">
        <div class="mt-3">
            <label class="form-label">Id</label>
            <input type="text" class="form-control" asp-for="Id" readonly />
        </div>

        <!--Div 1 is for Code-->
        <div class="mt-3">
            <label class="form-label">Code</label>
            <input type="text" class="form-control" asp-for="Code" />
        </div>

        <!--Div 2 is for Name-->
        <div class="mt-3">
            <label class="form-label">Name</label>
            <input type="text" class="form-control" asp-for="Name" />
        </div>
        <!--Div 3 is for Image URL-->
        <div class="mt-3">
            <label class="form-label">Image URL</label>
            <input type="text" class="form-control" asp-for="RegionImageUrl" />
        </div>
        <!--Div 4 is for Save Butoon-->
        <div class="mt-3 d-flex justify-content-between" >
            <button type="submit" class="btn btn-primary">Save</button>
            <button asp-controller="Regions"
                    asp-action="Delete"
                    class="btn btn-danger">Delete</button>
        </div>

    </form>
   <!-- Delete button outside so it always shows -->

}
    
