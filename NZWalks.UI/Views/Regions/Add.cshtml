@model NZWalks.UI.Models.AddRegionViewModel

<!-- Create a Form in this view that will take regions info from client to the api-->

<h1 class="mt-3">Add Regions</h1>
<form method="post">
    <!--Div 1 is for Code-->
<div class="mt-3">
     <label class="form-label">Code</label>
     <input type="text" class="form-control" asp-for="Code" />
</div>

    <!--Div 2 is for Name-->
 <div class="mt-3">
        <label class="form-label">Name</label>
        <input type="text" class="form-control" asp-for="Name" />
    </div>
    <!--Div 3 is for Image URL-->
    <div class="mt-3">
        <label class="form-label">Image URL</label>
        <input type="text" class="form-control" asp-for="RegionImageUrl" />
    </div>

    <!--Div 4 is for Save Butoon-->
    <div class="mt-3 d-flex justify-content-between">

            <button type="submit" class="btn btn-primary">Save</button>
        

    </div>

</form>